<?xml version="1.0" encoding="utf-8"?>
<il.co.yshahak.familytree.ui.customview.NodeView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center">

    <include layout="@layout/saparatoes"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="12dp"
        android:orientation="horizontal"
        android:background="@drawable/node_bg">

        <android.support.v7.widget.CardView
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            card_view:cardCornerRadius="4dp">

            <TextView
                android:id="@+id/dad"
                android:text="@string/add_partner"
                style="@style/person_slot"/>
        </android.support.v7.widget.CardView>


        <View
            android:id="@+id/node_divider"
            android:layout_width="5dp"
            android:layout_height="3dp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/black"/>

        <android.support.v7.widget.CardView
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            card_view:cardCornerRadius="4dp">

            <TextView
                android:id="@+id/mom"
                android:text="@string/add_partner"
                style="@style/person_slot"/>
        </android.support.v7.widget.CardView>


    </LinearLayout>

    <View
        android:id="@+id/separator_vertical_down"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="3dp"
        android:layout_height="12dp"
        android:background="@android:color/black"
        android:layout_gravity="center_horizontal"
        tools:showIn="@layout/cell_node"/>


</il.co.yshahak.familytree.ui.customview.NodeView>